<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5dp"
        android:background="@drawable/bg_border_whitebg"
        android:elevation="@dimen/dp1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/dp10dp">

            <TextView
                android:id="@+id/tv_lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5dp"
                android:text="Name : "
                android:visibility="gone"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/dp13dp" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp14dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:padding="@dimen/dp10dp">

            <TextView
                android:id="@+id/tv_lbl_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5dp"
                android:text="Qty : "
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/dp13dp" />

            <TextView
                android:id="@+id/tv_item_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp14dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10dp"
            android:textSize="@dimen/dp14dp" />

    </LinearLayout>

</LinearLayout>