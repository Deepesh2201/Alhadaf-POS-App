<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_menu"
                    android:visibility="gone"
                    app:tint="@color/white" />


                <TextView
                    android:id="@+id/tv_title_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp25dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="@dimen/dp300dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp5dp"
                    android:textColor="@color/white"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_search"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/iv_language"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_translate"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/iv_workflow"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp14dp"
                    android:src="@drawable/ic_workflow"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/iv_range_booking"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp14dp"
                    android:src="@drawable/ic_outline_calendar_month_24"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/iv_add_contact"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_update_contact"
                    android:visibility="gone"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/iv_store"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_marginRight="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_gun_store" />

                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:padding="@dimen/dp15dp"
                    android:src="@drawable/ic_logout" />

            </LinearLayout>


        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>