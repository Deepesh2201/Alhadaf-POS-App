<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.15"
            android:padding="@dimen/dp5dp"
            android:text="Index"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Item"
            android:gravity="left"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="QTY"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_used_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Used Qty"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_remain_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Remain Qty"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />


        <TextView
            android:id="@+id/tv_lbl_decount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Discount"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_vat_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Vat Type"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_vat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Vat"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_prince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Duration"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1dp"
        android:background="@color/Gray_light" />

</LinearLayout>