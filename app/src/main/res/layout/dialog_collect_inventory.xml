<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_ferry_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black_bottomsheet"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_top_corner"
        android:backgroundTint="@color/colorBg2"
        android:minHeight="@dimen/dp250dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_top_corner"
            android:elevation="@dimen/dp2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp10dp">

                <TextView
                    android:id="@+id/tv_lbl_collect_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Collect Inventory"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/dp18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dlg_membername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/dp16dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close_dlg"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10dp"
                android:src="@drawable/ic_close" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1dp"
            android:background="@color/Gray_light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp10dp"
                android:paddingLeft="@dimen/dp10dp">


                <LinearLayout
                    android:id="@+id/ln_collect_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_lbl_select_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select person"
                            android:textColor="@color/secondaryTextColor" />

                        <TextView
                            android:id="@+id/tv_sel_person"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp45dp"
                            android:layout_margin="@dimen/dp5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_whitebg"
                            android:drawableRight="@drawable/ic_drop_down_fill_24"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:elevation="@dimen/dp1dp"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp10dp"
                            android:text="Select Person"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/dp16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_lbl_select_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textColor="@color/secondaryTextColor" />


                        <TextView
                            android:id="@+id/tv_sel_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp45dp"
                            android:layout_margin="@dimen/dp5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_whitebg"
                            android:drawableRight="@drawable/ic_calendar"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:elevation="@dimen/dp1dp"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp10dp"
                            android:text="Select Date"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/dp16dp" />

                    </LinearLayout>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_collect_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10dp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_dlg_nodata"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp10dp"
                            android:gravity="center"
                            android:text="No Data found!!"
                            android:visibility="gone" />
                    </FrameLayout>
                </ScrollView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_comment"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp10dp"
                    android:layout_marginTop="@dimen/dp5dp"
                    android:layout_marginEnd="@dimen/dp10dp"
                    android:layout_weight="1"
                    android:hint="Enter Comment">

                    <EditText
                        android:id="@+id/edt_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/dp18dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_dlg_collect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Collect"
            android:textColor="@color/white"
            android:textSize="@dimen/dp16dp" />

    </LinearLayout>

</LinearLayout>