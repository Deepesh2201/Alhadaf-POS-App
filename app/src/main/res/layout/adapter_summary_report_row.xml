<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:padding="@dimen/dp5dp"
            android:text="Index"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp5dp"
            android:text="Item Name"
            android:gravity="start"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_sale_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="@dimen/dp5dp"
            android:text="Sale QTY"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_return_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="@dimen/dp5dp"
            android:text="Return QTY"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_lbl_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="@dimen/dp5dp"
            android:text="Sale Amount"
            android:layout_marginRight="@dimen/dp10dp"
            android:gravity="right"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />


    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_detail"
        android:background="@color/Gray_light" />

    
</LinearLayout>