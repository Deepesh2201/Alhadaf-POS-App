<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp7dp"
    android:layout_marginTop="@dimen/dp2dp"
    android:layout_marginEnd="@dimen/dp7dp"
    android:layout_marginBottom="@dimen/dp5dp"
    android:background="@drawable/bg_button_white"
    android:elevation="@dimen/dp5dp"
    android:orientation="vertical"
    android:padding="@dimen/dp5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp2dp"
            android:text="dnfj14515616516565"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp20dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/dp2dp"
            android:text="12/12/2022"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp20dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2dp"
        android:background="@color/Gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp2dp"
                android:text="Name: Mandaviya Dhruvi"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

            <TextView
                android:id="@+id/tv_contact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp2dp"
                android:text="Contact Number : 2587413690"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp5dp"
                android:layout_marginEnd="@dimen/dp5dp"
                android:background="@drawable/bg_button_white"
                android:elevation="@dimen/dp5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingStart="@dimen/dp20dp"
                android:paddingEnd="@dimen/dp20dp"
                android:text="View More"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>