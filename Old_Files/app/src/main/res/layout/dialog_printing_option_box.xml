<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/idDialogParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5dp"
        android:layout_marginRight="@dimen/dp5dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:paddingBottom="@dimen/dp10dp"
            android:background="@drawable/bg_button_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_Port"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button_white"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_option"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/bg_button_white"
                    android:entries="@array/port"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="@string/please_device"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="192.168.2.56"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_disconnect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_white"
                    android:backgroundTint="@color/Gray_light"
                    android:text="@string/discon"
                    android:textColor="@color/primaryTextColor" />

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_white"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="connect"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logolin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp50dp"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp80dp"
                android:layout_height="@dimen/dp80dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_border"
                android:padding="@dimen/dp12dp"
                android:src="@drawable/app_logo_icon" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>