<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/dp10dp"
        app:cardElevation="@dimen/dp5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dp150dp"
                    android:layout_height="@dimen/dp2dp"
                    android:background="@color/loging_btn" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5dp">

                    <ImageView
                        android:id="@+id/iv_icon_img"
                        android:layout_width="@dimen/dp30dp"
                        android:layout_height="@dimen/dp30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp2dp"
                        android:layout_marginTop="@dimen/dp2dp"
                        android:layout_marginBottom="@dimen/dp2dp" />

                    <LinearLayout
                        android:layout_width="@dimen/dp150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_membership_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/tv_per_month"
                                android:textColor="@color/loging_btn"
                                android:textSize="@dimen/dp14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_per_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="@dimen/dp12dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="tax"
                            android:paddingEnd="@dimen/dp5dp"
                            android:textAlignment="gravity"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/dp10dp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_membership_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp5dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Elite (M4)"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/dp14dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_membership_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp130dp" />

                    <LinearLayout
                        android:id="@+id/ln_full_specification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_full_specification"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="More Details"
                                android:textColor="@color/loging_btn"
                                android:textSize="@dimen/dp14dp" />

                            <View

                                android:layout_width="@dimen/dp100dp"
                                android:layout_height="1dp"
                                android:background="@color/loging_btn" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dp10dp"
                android:background="@color/loging_btn">

                <TextView
                    android:id="@+id/tv_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Add to cart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp15dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>