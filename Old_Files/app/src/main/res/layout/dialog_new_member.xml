<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black_bottomsheet"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_lbl_become_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Become a Member"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp18dp" />

                <ImageView
                    android:id="@+id/ic_back_button"
                    android:layout_width="@dimen/dp45dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp10dp"
                    android:padding="@dimen/dp2dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:paddingBottom="@dimen/dp10dp"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp10dp"
                        android:layout_marginEnd="@dimen/dp10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_first_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="First Name *">

                                <EditText
                                    android:id="@+id/edt_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_last_name"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_middle_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="Middle Name ">

                                <EditText
                                    android:id="@+id/edt_middle_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_last_name"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_last_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="Last Name *">

                                <EditText
                                    android:id="@+id/edt_last_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_email"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_email"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Email *">

                                <EditText
                                    android:id="@+id/edt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_phone_no"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_phone_no"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Contact Number*">

                                <EditText
                                    android:id="@+id/edt_phone_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:nextFocusDown="@id/edt_qatar_id_no"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_select_user_type"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:hint="Select User Type*">

                                <EditText
                                    android:id="@+id/edt_select_user_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:drawableEnd="@drawable/ic_drop_down"
                                    android:drawableTint="@color/black"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_nationality_select"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_select_reference"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:hint="Select Reference User">

                                <EditText
                                    android:id="@+id/edt_select_refrence_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:drawableEnd="@drawable/ic_drop_down"
                                    android:drawableTint="@color/black"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_nationality_select"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_national_id_no"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:hint="Qatar National I'd">

                                <EditText
                                    android:id="@+id/edt_qatar_id_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_nationality_select"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_qatar_expir_date"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Qatar I'd Expiry">

                                <EditText
                                    android:id="@+id/edt_qatar_expir_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contextClickable="false"
                                    android:cursorVisible="false"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:drawableTint="@color/black"
                                    android:focusableInTouchMode="false"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_birth_date"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_national_passport_no"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:hint="Passport Id Number">

                                <EditText
                                    android:id="@+id/edt_qatar_passport_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_nationality_select"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_passport_expir_date"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Passport I'd Expiry">

                                <EditText
                                    android:id="@+id/edt_passport_expir_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contextClickable="false"
                                    android:cursorVisible="false"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:drawableTint="@color/black"
                                    android:focusableInTouchMode="false"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusDown="@id/edt_birth_date"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5dp"
                            android:orientation="horizontal">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_nationality_select"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="Nationality *">

                                <EditText
                                    android:id="@+id/edt_nationality_select"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_address"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_birth_date"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:hint="Date of Birth *">

                                <EditText
                                    android:id="@+id/edt_birth_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contextClickable="false"
                                    android:cursorVisible="false"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:drawableTint="@color/black"
                                    android:focusableInTouchMode="false"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_address"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="Address">

                                <EditText
                                    android:id="@+id/edt_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_company_name"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txt_company"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="@dimen/dp5dp"
                                android:layout_weight="1"
                                android:hint="Company">

                                <EditText
                                    android:id="@+id/edt_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edt_password"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tl_password"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Password *">

                                <EditText
                                    android:id="@+id/edt_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"
                                    android:nextFocusDown="@id/edt_confirm_password"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tl_confirm_password"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:hint="Confirm Password *">

                                <EditText
                                    android:id="@+id/edt_confirm_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="@dimen/dp18dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_proof_upload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                android:text="Upload all required documents*"
                                android:textColor="@color/loging_btn"
                                android:textSize="@dimen/dp16dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5dp"
                                app:cardCornerRadius="@dimen/dp5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp5dp"
                                        android:layout_marginTop="@dimen/dp2dp"
                                        android:text="Upload Qatar Id*"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/dp12dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_select_qatar_id"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_margin="@dimen/dp5dp"
                                            android:background="@color/Gray_light"
                                            android:padding="@dimen/dp20dp" />

                                        <ImageView
                                            android:id="@+id/iv_qatar_proof"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_marginStart="@dimen/dp20dp"
                                            android:layout_marginTop="@dimen/dp5dp"
                                            android:layout_marginBottom="@dimen/dp5dp"
                                            android:scaleType="fitXY" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp5dp"
                                        android:layout_marginTop="@dimen/dp2dp"
                                        android:text="Upload Passport Image*"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/dp12dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_select_passport"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_margin="@dimen/dp5dp"
                                            android:background="@color/Gray_light"
                                            android:padding="@dimen/dp20dp" />

                                        <ImageView
                                            android:id="@+id/iv_passport_image"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_marginStart="@dimen/dp20dp"
                                            android:layout_marginTop="@dimen/dp5dp"
                                            android:layout_marginBottom="@dimen/dp5dp"
                                            android:scaleType="fitXY" />

                                    </LinearLayout>


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp5dp"
                                        android:layout_marginTop="@dimen/dp2dp"
                                        android:text="Upload other Government proof"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/dp12dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_select_other_proof"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_margin="@dimen/dp5dp"
                                            android:background="@color/Gray_light"
                                            android:padding="@dimen/dp20dp" />

                                        <ImageView
                                            android:id="@+id/iv_other_proof"
                                            android:layout_width="@dimen/dp70dp"
                                            android:layout_height="@dimen/dp70dp"
                                            android:layout_marginStart="@dimen/dp20dp"
                                            android:layout_marginTop="@dimen/dp5dp"
                                            android:layout_marginBottom="@dimen/dp5dp"
                                            android:scaleType="fitXY" />

                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_registration_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp7dp"
                    android:layout_marginEnd="@dimen/dp7dp"
                    android:layout_marginBottom="@dimen/dp7dp"
                    android:background="@drawable/bg_button_white"
                    android:backgroundTint="@color/loging_btn"
                    android:elevation="@dimen/dp5dp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>