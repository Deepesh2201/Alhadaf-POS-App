<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5dp"
        android:layout_marginTop="@dimen/dp5dp"
        android:layout_marginEnd="@dimen/dp5dp"
        android:layout_marginBottom="@dimen/dp5dp"
        android:background="@drawable/bg_button_white"
        android:elevation="@dimen/dp2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item  :  " />

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_total_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_lbl_total_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Qty :  " />

            <TextView
                android:id="@+id/tv_total_qty"
                android:layout_width="@dimen/dp80dp"
                android:layout_height="@dimen/dp40dp"
                android:elevation="@dimen/dp1dp"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_issued_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_lbl_issued_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issued Qty :  " />

            <TextView
                android:id="@+id/tv_issued_qty"
                android:layout_width="@dimen/dp80dp"
                android:layout_height="@dimen/dp40dp"
                android:elevation="@dimen/dp1dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty. :  " />

            <EditText
                android:id="@+id/edt_qty"
                android:layout_width="@dimen/dp80dp"
                android:layout_height="@dimen/dp40dp"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/colorBg2"
                android:elevation="@dimen/dp1dp"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.1">

            <CheckBox
                android:id="@+id/chk_collect"
                android:layout_width="@dimen/dp45dp"
                android:layout_height="@dimen/dp45dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/dp10dp"
                android:layout_marginEnd="@dimen/dp10dp"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/colorBg2"
                android:gravity="right"
                android:padding="@dimen/dp10dp"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="@dimen/dp16dp"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>