<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_dlg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialog_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5dp"
        android:layout_marginRight="@dimen/dp5dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:background="@drawable/bg_border_dark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp45dp"
                android:layout_height="@dimen/dp45dp"
                android:layout_gravity="right"
                android:padding="@dimen/dp3dp"
                android:layout_marginTop="@dimen/dp10dp"
                android:layout_marginEnd="@dimen/dp10dp"
                android:src="@drawable/ic_close"
                android:visibility="visible"
                app:tint="@color/red" />

            <EditText
                android:id="@+id/edt_select_member"
                android:layout_width="@dimen/dp350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp20dp"
                android:layout_marginTop="@dimen/dp70dp"
                android:layout_marginRight="@dimen/dp20dp"
                android:layout_marginBottom="@dimen/dp2dp"
                android:background="@drawable/bg_border_dark"
                android:cursorVisible="false"
                android:drawableRight="@drawable/ic_drop_down"
                android:drawableTint="@color/black"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Select Member"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnyes"
                android:layout_width="@dimen/dp250dp"
                android:layout_height="@dimen/dp45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp20dp"
                android:layout_marginTop="@dimen/dp20dp"
                android:layout_marginRight="@dimen/dp20dp"
                android:layout_marginBottom="@dimen/dp10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/loging_btn"
                android:text="Ok"
                android:textColor="@color/white"
                android:textSize="@dimen/dp15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20dp"
                android:layout_marginTop="@dimen/dp5dp"
                android:layout_marginEnd="@dimen/dp20dp"
                android:layout_marginBottom="@dimen/dp5dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/loging_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp20dp" />

                <View
                    android:layout_width="@dimen/dp0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/loging_btn" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_add_new_member"
                android:layout_width="@dimen/dp350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp20dp"
                android:background="@drawable/bg_border_dark"
                android:backgroundTint="@color/loging_btn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Add New Member"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/logolin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp40dp"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp100dp"
                android:layout_height="@dimen/dp90dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_border_dark"
                android:padding="@dimen/dp10dp"
                android:src="@drawable/app_logo_icon" />


        </FrameLayout>

    </RelativeLayout>

</LinearLayout>