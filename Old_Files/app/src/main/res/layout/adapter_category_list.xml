<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp5dp">

        <com.instanceit.alhadafpos.Views.CircleImageView
            android:id="@+id/iv_category"
            android:layout_width="@dimen/dp30dp"
            android:layout_height="@dimen/dp30dp"
            android:layout_marginRight="@dimen/dp10dp"
            android:visibility="visible"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />


        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp5dp"
            android:textSize="@dimen/dp16dp" />


    </LinearLayout>


</RelativeLayout>