<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black1"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp40dp"
        android:layout_marginTop="@dimen/dp20dp"
        android:layout_marginRight="@dimen/dp40dp"
        android:layout_marginBottom="@dimen/dp20dp"
        app:cardCornerRadius="@dimen/dp15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_addgst"
                android:layout_width="130dp"
                android:layout_height="@dimen/dp35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp10dp"
                android:layout_marginTop="@dimen/dp10dp"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Add gst"
                android:textColor="@color/white"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Payment"
                android:textColor="@color/white"
                android:textSize="@dimen/dp25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_walletbalance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Wallet : 100"
                android:textColor="@color/white"
                android:textSize="@dimen/dp25dp"
                android:textStyle="bold"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_header"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ll_normal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_paymenttype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp20dp"
                                android:layout_marginTop="@dimen/dp10dp"
                                android:layout_marginBottom="@dimen/dp5dp"
                                android:visibility="visible" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp50dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:padding="@dimen/dp3dp"
                                    android:text="Bank "
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dp15dp"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/tv_lbl_payment_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/dp30dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/dp3dp"
                                    android:text="Payment type"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dp15dp" />

                                <TextView
                                    android:id="@+id/tv_lbl_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp100dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/dp3dp"
                                    android:text="Amount"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dp15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_payment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:minHeight="@dimen/dp150dp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_discount"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:visibility="visible">

                                        <EditText
                                            android:id="@+id/edt_discount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLength="2"
                                            android:drawableTint="@color/black"
                                            android:hint="Bill Discount"
                                            android:inputType="text"
                                            android:textSize="@dimen/dp16dp"
                                            android:textColor="@color/primaryTextColor" />
                                    </com.google.android.material.textfield.TextInputLayout>



                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_rf_number"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:visibility="visible">

                                        <EditText
                                            android:id="@+id/edt_rf_number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableTint="@color/black"
                                            android:hint="Reference number*"
                                            android:inputType="text"
                                            android:textSize="@dimen/dp16dp"

                                            android:textColor="@color/primaryTextColor" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_lbl_total_amount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Total Amt :"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tv_totamt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_lbl_total_disc_amount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Total Disc Amt :"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tv_totdiscamt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/ll_discountview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_discounttitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dp20dp"
                                                android:layout_marginRight="@dimen/dp15dp"
                                                android:gravity="center_vertical"
                                                android:paddingStart="@dimen/dp10dp"
                                                android:text="Discount :"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="@dimen/dp20dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_couponcode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:text="(Winter12)"
                                                android:textColor="@color/red"
                                                android:textSize="@dimen/dp20dp"
                                                android:visibility="gone" />


                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/tv_discount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/dp20dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/tv_lbl_payable_amt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Payable Amt :"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tv_payableamt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_lbl_paid_amt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Paid Amt :"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tv_paidamt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/ll_remaing"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_lbl_remaing_amt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Remaining amt  :"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tv_remaining"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/dp20dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/ll_change"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/dp30dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_lbl_payment_dlg_title_change_amt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp20dp"
                                            android:layout_marginRight="@dimen/dp15dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:paddingStart="@dimen/dp10dp"
                                            android:text="Change amt  :"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/dp20dp" />


                                        <TextView
                                            android:id="@+id/tv_change"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:text="0"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/dp20dp" />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_cashnote"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp50dp"
                        android:layout_above="@+id/numpad"
                        android:layout_marginLeft="@dimen/dp10dp"
                        android:layout_marginTop="@dimen/dp5dp"
                        android:layout_marginRight="@dimen/dp20dp"
                        android:background="@drawable/bg_border_dark"
                        android:inputType="none"
                        android:paddingStart="@dimen/dp20dp"
                        android:text="" />

                    <com.instanceit.alhadafpos.Views.Numpad
                        android:id="@+id/numpad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp35dp"
                            android:layout_margin="@dimen/dp10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_white"
                            android:backgroundTint="@color/button_sky"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp18dp"
                            android:textStyle="bold" />


                        <Button
                            android:id="@+id/btn_printbill"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp35dp"
                            android:layout_margin="@dimen/dp10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_white"
                            android:backgroundTint="@color/main_blue"
                            android:text="Print Bill"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp18dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>