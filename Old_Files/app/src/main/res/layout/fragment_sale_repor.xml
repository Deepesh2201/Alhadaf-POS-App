<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Report.SaleReporFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp5dp"
        android:layout_marginTop="@dimen/dp5dp"
        android:layout_marginEnd="@dimen/dp5dp"
        android:layout_marginBottom="@dimen/dp5dp"
        app:cardElevation="@dimen/dp5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1dp"
                android:background="@color/Gray_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35dp"
                android:background="@color/loging_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.15"
                    android:padding="@dimen/dp5dp"
                    android:text="Index"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_tran_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Transaction ID"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_order_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Order No"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Member"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />
  <TextView
                    android:id="@+id/tv_lbl_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Payment Type"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Amount"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />


                <TextView
                    android:id="@+id/tv_lbl_ord_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Order Date"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />

                <View
                    android:layout_width="@dimen/dp1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp5dp"
                    android:background="@color/Gray_light" />

                <TextView
                    android:id="@+id/tv_lbl_ent_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="@dimen/dp5dp"
                    android:text="Entry BY"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                   android:textSize="@dimen/dp12dp"  />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1dp"
                android:background="@color/Gray_light" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="No Data found"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_report_listing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                </FrameLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>