    <EditText
        android:id="@+id/et_barcode"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp5dp"
        android:defaultFocusHighlightEnabled="true"
        android:focusable="true"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg2"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_no_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/login_bg" />


            <ImageView
                android:layout_width="@dimen/dp250dp"
                android:layout_height="@dimen/dp250dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/trans_white1"
                android:padding="@dimen/dp20dp"
                android:src="@drawable/app_logo" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_item_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_category_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10dp"
                    android:layout_marginRight="@dimen/dp10dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp5dp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/login_bg" />


            <ImageView
                android:layout_width="@dimen/dp250dp"
                android:layout_height="@dimen/dp250dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_button_white"
                android:backgroundTint="@color/trans_white1"
                android:padding="@dimen/dp20dp"
                android:src="@drawable/app_logo" />


