<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp5dp"
    android:layout_marginRight="@dimen/dp5dp"
    android:background="#F5F5F5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_deatil"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_paymenttype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/dp3dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp15dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_amt"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/dp3dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp15dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>


        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp30dp"
            android:layout_height="@dimen/dp30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete"
            app:tint="@color/colorPrimary"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_deatil"
        android:background="?attr/colorPrimary"/>


</RelativeLayout>