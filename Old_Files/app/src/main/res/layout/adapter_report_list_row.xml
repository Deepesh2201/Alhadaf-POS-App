<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.15"
            android:padding="@dimen/dp5dp"
            android:text="Index"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_trs_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Transaction ID"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Order No"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Member"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Payment"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Amount"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />


        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Order Date"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_entery_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:padding="@dimen/dp5dp"
            android:text="Entry BY"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dp12dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_detail"
        android:background="@color/Gray_light" />

    <LinearLayout
        android:id="@+id/ln_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="12.3">

            <TextView
                android:id="@+id/tv_ord_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp5dp"
                android:text="Order Details"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp12dp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1dp"
                        android:background="@color/Gray_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35dp"
                        android:background="@color/loging_btn"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_index"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.15"
                            android:padding="@dimen/dp5dp"
                            android:text="Index"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_dec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Description"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_validity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Validity"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_expiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Expiry Date"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Price"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />


                        <TextView
                            android:id="@+id/tv_lbl_cmp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Coupon Discount"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_taxable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Taxable"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_vat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Vat"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />

                        <View
                            android:layout_width="@dimen/dp1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp5dp"
                            android:background="@color/Gray_light" />

                        <TextView
                            android:id="@+id/tv_lbl_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dp5dp"
                            android:text="Amount"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp12dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1dp"
                        android:background="@color/Gray_light" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_nodata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="No Data found"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_membership_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />

                    </FrameLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_detail"
        android:background="@color/Gray_light" />

</LinearLayout>