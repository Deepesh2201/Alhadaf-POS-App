<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_trs_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="true"
            android:text="Transaction ID"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="true"
            android:text="Order No"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="true"
            android:text="Order Date"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="true"
            android:text="Amount"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Member"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />


        <TextView
            android:id="@+id/tv_entery_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Enter BY"
            android:textSize="@dimen/dp14dp" />


        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp5dp"
            android:layout_marginEnd="@dimen/dp5dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_button_white"
            android:backgroundTint="@color/loging_btn"
            android:gravity="center"
            android:padding="@dimen/dp2dp"
            android:singleLine="true"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dp14dp" />

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <LinearLayout
            android:id="@+id/ln_opration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.12"
            android:gravity="center"
            android:padding="@dimen/dp2dp">

            <ImageView
                android:id="@+id/iv_print_invoice"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="@dimen/dp5dp"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp7dp"
                android:src="@drawable/ic_pdf"
                app:tint="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/iv_del_order"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="@dimen/dp5dp"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp4dp"
                android:src="@drawable/ic_close"
                android:visibility="visible"
                app:tint="@color/colorPrimaryDark" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5dp"
            android:background="@color/Gray_light" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp5dp"
            android:layout_marginEnd="@dimen/dp5dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_button_white"
            android:backgroundTint="@color/loging_btn"
            android:gravity="center"
            android:padding="@dimen/dp2dp"
            android:singleLine="true"
            android:text="More"
            android:textColor="@color/white"
            android:textSize="@dimen/dp14dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_detail"
        android:background="@color/Gray_light" />

</LinearLayout>