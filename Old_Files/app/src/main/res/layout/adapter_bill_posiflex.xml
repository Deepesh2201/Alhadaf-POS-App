<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="512dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sr"
            android:layout_width="@dimen/dp40dp"
            android:layout_height="match_parent"
            android:letterSpacing="0.05"
            android:text="sr"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_prt_itemname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/dp16dp" />

            <TextView
                android:id="@+id/tv_schemename_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5dp"
                android:layout_marginTop="@dimen/dp5dp"
                android:drawableLeft="@drawable/ic_dot"
                android:drawablePadding="@dimen/dp5dp"
                android:gravity="center_vertical"
                android:letterSpacing="0.09"
                android:text="schemename"
                android:textColor="@color/black"
                android:textSize="@dimen/dp12dp"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_prt_price"
            android:layout_width="@dimen/dp100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="@dimen/dp16dp" />

        <TextView
            android:id="@+id/tv_prt_Qty"
            android:layout_width="@dimen/dp100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:text="qty"
            android:textColor="@color/black"
            android:textSize="@dimen/dp16dp" />


        <TextView
            android:id="@+id/tv_prt_total_Amt"
            android:layout_width="@dimen/dp100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:letterSpacing="0.05"
            android:text="amt"
            android:textColor="@color/black"
            android:textSize="@dimen/dp16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hsn_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp10dp"
        android:gravity="center_vertical"
        android:letterSpacing="0.05"
        android:paddingLeft="@dimen/dp20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dp11dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20dp"
        android:letterSpacing="0.05"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/dp12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_detail"
        android:layout_marginLeft="@dimen/dp20dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_cgst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:text="CGST"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12dp"
            android:visibility="visible" />

        <TextView

            android:id="@+id/tv_sgst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15dp"
            android:letterSpacing="0.05"
            android:text="SGST"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12dp"
            android:visibility="visible" />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_schemename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5dp"
        android:drawableLeft="@drawable/ic_dot"
        android:drawablePadding="@dimen/dp10dp"
        android:gravity="center_vertical"
        android:letterSpacing="0.05"
        android:text="schemename"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/dp3dp"
        android:background="@color/gray_nav" />



</LinearLayout>



