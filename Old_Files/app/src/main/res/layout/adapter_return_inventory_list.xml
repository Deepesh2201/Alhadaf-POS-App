<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5dp"
        android:background="@drawable/bg_button_white"
        android:elevation="@dimen/dp2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member  :  " />

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return Date  :  " />

            <TextView
                android:id="@+id/tv_ret_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_return_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return By  :  " />

            <TextView
                android:id="@+id/tv_return_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/dp16dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_collect_items"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45dp"
            android:background="@drawable/bg_button_white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/dp10dp"
            android:paddingRight="@dimen/dp10dp"
            android:text="Item Detail"
            android:textColor="@color/white" />


    </LinearLayout>


</RelativeLayout>